@model List<MantenimientoSupplier.Models.sp_SupplierSelectAllResult>

@{
    ViewBag.Title = "Listado de Suppliers";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Agregar Nuevo", "Create", "Supplier",
                     null, new { @class = "btn btn-success" })
</p>

<table id="supplierTable" class="display" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>SupplierName</th>
            <th>Address1</th>
            <th>City</th>
            <th>State</th>
            <th>Country</th>
            <th>PhoneNumber</th>
            <th>Code</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.SupplierName</td>
                <td>@item.Address1</td>
                <td>@item.City</td>
                <td>@item.State</td>
                <td>@item.Country</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Code</td>
                <td>
                    <div class="btn-group" role="group">
                        @Html.ActionLink("Editar", "Edit", "Supplier", new { id = item.ID },
                            new { @class = "btn btn-warning btn-sm" })
                        @Html.ActionLink("Eliminar", "Delete", "Supplier", new { id = item.ID },
                            new { @class = "btn btn-danger btn-sm" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts {
    <script>
        $(document).ready(function () {
            $('#supplierTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: 'Exportar a Excel',
                        exportOptions: {
                            columns: ':visible:not(:last-child)',
                            modifier: {
                                page: 'all'
                            }
                        },
                        messageTop: 'Fecha de exportación: ' + new Date().toLocaleString()
                    },
                    {
                        extend: 'pdfHtml5',
                        text: 'Exportar a PDF',
                        exportOptions: {
                            columns: ':visible:not(:last-child)',
                            modifier: {
                                page: 'all'
                            }
                        },
                        messageTop: 'Fecha de exportación: ' + new Date().toLocaleString(),
                        pageSize: 'LETTER', 
                        customize: function (doc) {
                            doc.defaultStyle.fontSize = 8;
                            doc.styles.tableHeader.fontSize = 8; 
                            var footer = function (currentPage, pageCount) {
                                return {
                                    columns: [
                                        { text: 'Página ' + currentPage.toString() + ' de ' + pageCount, alignment: 'right' }
                                    ],
                                    margin: [10, 0]
                                };
                            };
                            doc.footer = footer;
                        }
                    }
                ],
                paging: true,
                searching: true,
                ordering: true,
                pageLength: 10,
                language: {
                    lengthMenu: "Mostrar _MENU_ registros por página",
                    zeroRecords: "No se encontraron resultados",
                    info: "Mostrando _START_ a _END_ de _TOTAL_ registros",
                    infoEmpty: "No hay registros disponibles",
                    infoFiltered: "(filtrado de un total de _MAX_ registros)",
                    search: "Buscar:",
                    paginate: {
                        first: "Primero",
                        last: "Último",
                        next: "Siguiente",
                        previous: "Anterior"
                    }
                }
            });
        });
    </script>
}
