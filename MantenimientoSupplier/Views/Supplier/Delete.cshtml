@model MantenimientoSupplier.Models.Supplier
@{
    ViewBag.Title = "Eliminar Supplier";
}

<h2>Eliminar Supplier</h2>
<p>¿Estás seguro de inactivar este registro?</p>

<dl class="dl-horizontal">
    <dt>ID</dt>
    <dd>@Model.ID</dd>
    <dt>SupplierName</dt>
    <dd>@Model.SupplierName</dd>
</dl>

@using (Html.BeginForm("Delete", "Supplier", FormMethod.Post))
{
    @Html.HiddenFor(m => m.ID)
    <button type="submit" class="btn btn-danger mt-3">Eliminar</button>
    <a href="@Url.Action("Index", "Supplier")" class="btn btn-default mt-3">Cancelar</a>
}
